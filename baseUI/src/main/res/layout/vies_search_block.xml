<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/search_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search_input_layout"
        android:layout_width="@dimen/size_0"
        android:layout_height="@dimen/spacing_40"
        android:layout_marginVertical="@dimen/spacing_16"
        android:layout_marginEnd="@dimen/spacing_20"
        android:paddingStart="@dimen/spacing_20"
        app:boxStrokeWidth="@dimen/size_0"
        app:boxStrokeWidthFocused="@dimen/size_0"
        app:endIconMode="clear_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="spread"
        app:startIconDrawable="@drawable/ic_search"
        app:startIconTint="@color/grey">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/search_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corners_bg"
            android:backgroundTint="@color/white"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="@integer/int_1"
            android:paddingVertical="@dimen/spacing_12"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>