<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HeroNameTextStyle">
        <item name="android:textSize">@dimen/text_20</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:maxLines">@integer/int_1</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">@integer/int_5</item>
        <item name="android:shadowDy">@integer/int_2</item>
        <item name="android:shadowRadius">@integer/int_1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CorneredImageView">
        <item name="cornerSizeBottomLeft">@dimen/spacing_12</item>
        <item name="cornerSizeBottomRight">@dimen/spacing_12</item>
        <item name="cornerFamily">rounded</item>
    </style>

</resources>